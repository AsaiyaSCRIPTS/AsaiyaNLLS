                local player = game.Players.LocalPlayer
                local starterGui = game:GetService("StarterGui")
                
                -- Display fake ban message
                starterGui:SetCore("SendNotification", {
                    Title = "Asaiya Scripts is UNAVAILABLE",
                    Text = "Use a different script for now.",
                    Duration = 3
                })
                
                -- Wait 3 seconds, then change the message
                task.wait(2)
        
                starterGui:SetCore("SendNotification", {
                    Title = "BYE!!!",
                    Text = "3",
                    Duration = 1.1
                })
        
                -- Kick the player after showing the fake ban
                task.wait(1) -- Give a slight delay before kicking
                player:Kick("ASAIYA SCRIPT IS UNAVAILABLE!!")
