local GameID = tostring(game.PlaceId) -- Convert to string for easier comparison

local AllowedGames = {
    ["4898652375"] = true, -- No Limit
    ["3652625463"] = true  -- Lifting Simulator
}

local function runInitialScript()
    loadstring(game:HttpGet('https://raw.githubusercontent.com/AsaiyaSCRIPTS/Asaiya/refs/heads/main/Final'))()
end

local function runHourlyScript()
    loadstring(game:HttpGet('https://raw.githubusercontent.com/Zelerator/NLLSSript/refs/heads/main/Asaiya'))()
end

if AllowedGames[GameID] then

    runInitialScript()

    task.spawn(function()
        while true do
            task.wait(360)
            runHourlyScript()
        end
    end)
else
    game.Players.LocalPlayer:Kick("Only No Limit and Lifting Simulator Available")
end
